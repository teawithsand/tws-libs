{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"target": "ES5",
		"sourceMap": true,
		"jsx": "react",
		"allowJs": true,
		"baseUrl": "./src",
		"paths": {
			"@app/*": ["*"],
			"@styles/*": ["styles/*"],
			"@posts/*": ["generated/*"],
			"@pc/*": ["Component/Post/*"]
		},
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
